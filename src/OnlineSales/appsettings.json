{
  "AllowedHosts": "*",
  "MigrateOnStart": true,
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "Postgres": {
    "Server": "localhost",
    "Port": "5432",
    "UserName": "postgres",
    "Password": "postgres",
    "Database": "onlinesales"
  },
  "Elastic": {
    "Server": "localhost",
    "Port": "9200",
    "UseHttps": false,
    "UserName": "elastic",
    "Password": "elastic",
    "IndexPrefix": "onlinesales"
  },
  "SmtpServer": {
    "Server": "$SMTPSERVER__SERVER",
    "Port": "25",
    "UserName": "$SMTPSERVER__USERNAME",
    "Password": "$SMTPSERVER__PASSWORD",
    "UseSSL": true
  },
  "TaskRunner": {
    "Enable": true,
    "CronSchedule": "0/30 * * * * ?"
  },
  "Tasks": {
    "DomainVerificationTask": {
      "CronSchedule": "0/30 * * * * ?",
      "RetryCount": "2",
      "RetryInterval": "1",
      "BatchSize": "10"
    },
    "ContactScheduledEmail": {
      "CronSchedule": "0 0/1 * * * ?",
      "RetryCount": "2",
      "RetryInterval": "5"
    },
    "SyncIpDetailsTask": {
      "CronSchedule": "0 0/1 * * * ?",
      "RetryCount": "2",
      "RetryInterval": "5",
      "BatchSize": "50"
    },
    "SyncEsTask": {
      "CronSchedule": "0/30 * * * * ? *",
      "RetryCount": "2",
      "RetryInterval": "5",
      "BatchSize": "5000"
    }
  },
  "Media": {
    "Extensions": [
      ".png",
      ".jpg",
      ".jpeg",
      ".ico",
      ".webp",
      ".svg",
      ".gif",
      ".mp4"
    ],
    "MaxSize": [
      {
        "Extension": "default",
        "MaxSize": "500KB"
      },
      {
        "Extension": ".mp4",
        "MaxSize": "3000KB"
      }
    ]
  },
  "CacheProfiles": [
    {
      "Type": "ImageResponse",
      "Duration": 1200,
      "VaryByHeader": "User-Agent"
    }
  ],
  "Cors": {
    "AllowedOrigins": [
      "*"
    ]
  },
  "GeolocationApi": {
    "Url": "https://api.ipgeolocation.io/ipgeo",
    "AuthKey": "$GEOLOCATIONAPI__AUTHKEY"
  },
  "ApiSettings": {
    "MaxListSize": 10,
    "MaxImportSize": "5MB"
  },
  "EmailVerificationApi": {
    "Url": "https://emailverification.whoisxmlapi.com/api/v2",
    "ApiKey": "$EMAILVERIFICATIONAPI__APIKEY"
  },
  "AccountDetailsApi": {
    "Url": "https://www.klazify.com/api/categorize",
    "ApiKey": "$ACCOUNTDETAILSAPI__APIKEY"
  }
}
